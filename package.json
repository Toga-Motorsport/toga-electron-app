{
  "name": "toga-motorsport-app",
  "private": true,
  "version": "1.1.1",
  "main": "electron/main.js",
  "description": "A React Electron app with Tailwind CSS and auto-updater.",
  "author": "Toga Motorsport <togamotorsport@gmail.com>",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build:react": "vite build",
    "build:electron": "electron-builder",
    "build": "npm run build:react && npm run build:electron",
    "preview": "vite preview",
    "release": "npm run build:react && electron-builder --publish always"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-updater": "^6.1.7",
    "express": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^5.2.0"
  },
  "build": {
    "appId": "com.yourapp.id",
    "productName": "Toga Motorsport App",
    "copyright": "Copyright Â© 2025 ${author}",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "Toga-Motorsport",
      "repo": "toga-electron-app"
    }
  }
}
